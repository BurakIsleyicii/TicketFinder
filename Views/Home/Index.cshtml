@using TicketFinder.Models.ViewModels
@model DefaultFilterData
@{
    ViewData["Title"] = "Home Page";
}

<form id="searchForm" method="get" action="">
    <div class="card-body">
        <div class="row d-flex justify-content-center">
            <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <input type="hidden" value="@Model.OriginId" id="originId" />
                <input type="hidden" value="@Model.Origin" id="originName" name="Origin" />
                <label for="OriginId">Nereden</label>
                <select name="OriginId" id="busLocationsListForOrigin" class="form-control" required>
                    @foreach (var location in ViewBag.Locations)
                    {
                        <option value="@location.Id" selected="@(Model.OriginId == location.Id)">@location.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="row d-flex justify-content-center mt-3">
            <div class="form-group col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2" style="text-align: center;">
                <a class="btn btn-sm btn-outline-dark rounded-circle" onclick="swapLocations()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-up" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5zm-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5z" />
                    </svg>
                </a>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <input type="hidden" value="@Model.DestinationId" id="destinationId" />
                <input type="hidden" value="@Model.Destination" id="destinationName" name="Destination" />
                <label for="DestinationId">Nereye</label>
                <select name="DestinationId" id="busLocationsListForDestination" class="form-control" required>
                    @foreach (var location in ViewBag.Locations)
                    {
                        <option value="@location.Id" selected="@(Model.DestinationId == location.Id)">@location.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="card-body mt-2">
        <div class="row d-flex justify-content-center">
            <div class="form-group col-xs-3 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                <label for="DepartureDate">Tarih</label>
                <input type="date" class="form-control" name="DepartureDate" id="departureDate" value="@Model.DepartureDate.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="form-group col-xs-1 col-sm-1 col-md-1 col-lg-1 col-xl-1">
                <button class="btn btn-sm btn-info mt-1" onclick="selectToday()" type="button">Bugün</button>
                <button class="btn btn-sm btn-info mt-1" onclick="selectTomorrow()" type="button">Yarın</button>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center mt-2">
        <div class="col-6 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit" value="Submit">Biletini Bul</button>
        </div>
    </div>
</form>